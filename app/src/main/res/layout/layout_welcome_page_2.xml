<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        style="@style/TextAppearance.Primary.Big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title_setUpPermissions"
        android:textSize="@dimen/font_size_title"
        app:layout_constraintBottom_toTopOf="@+id/layout_welcome_page_2_request_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31" />


    <TextView
        android:id="@+id/textView2"
        style="@style/TextAppearance.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:gravity="center"
        android:text="@string/text_permissionsHelp"
        app:layout_constraintBottom_toTopOf="@+id/layout_welcome_page_2_perm_ok_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/layout_welcome_page_2_perm_ok_img"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/layout_welcome_page_2_request_btn"
        app:layout_constraintEnd_toEndOf="@+id/layout_welcome_page_2_request_btn"
        app:layout_constraintStart_toStartOf="@+id/layout_welcome_page_2_request_btn"
        app:layout_constraintTop_toTopOf="@+id/layout_welcome_page_2_request_btn"
        app:srcCompat="@drawable/ic_check_24dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/layout_welcome_page_2_request_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_setUp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.72" />


</androidx.constraintlayout.widget.ConstraintLayout>