<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingStart="35dp"
    android:paddingEnd="35dp">

    <ImageView
        android:id="@+id/action_message_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:tint="@color/colorBlack"
        android:src="@drawable/ic_service_off_24dp"/>

    <TextView
        style="@style/TextAppearance.Primary"
        android:id="@+id/action_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_serviceNotStarted"
        android:textSize="@dimen/font_size_big"
        android:gravity="center"/>

    <androidx.appcompat.widget.AppCompatButton
        style="?borderlessButtonStyle"
        android:id="@+id/action_message_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_start"
        android:layout_marginTop="16dp"/>

</LinearLayout>