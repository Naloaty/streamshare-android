<resources>

    <!-- generalization start -->
    <style name="Theme.SyncShare" parent="Theme.SyncShare.Base" />

    <style name="Theme.SyncShare.NoActionBar" parent="Theme.SyncShare.Base.NoActionBar" />

    <style name="Theme.SyncShare.NoActionBar.StaticStatusBar" parent="Theme.SyncShare.NoActionBar" />
    <!-- generalization end -->

    <!-- text styling start -->
    <style name="TextAppearance">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Primary" parent="@style/TextAppearance">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">@dimen/font_size_primary</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Primary.Big">
        <item name="android:textSize">@dimen/font_size_big</item>
    </style>

    <style name="TextAppearance.Secondary">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">@dimen/font_size_secondary</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Secondary.Big">
        <item name="android:textSize">@dimen/font_size_big</item>
    </style>

    <style name="TextAppearance.Button" parent="@style/TextAppearance.MaterialComponents.Button">
        <!-- this disable button text CAPS -->
        <item name="android:textAllCaps">false</item>
    </style>
    <!-- text styling end -->

    <!-- widget styling start -->
    <style name="Widget.SyncShare.ProgressBar.Horizontal.Oval" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">?roundProgressBar</item>
        <item name="android:background">?roundProgressBarShape</item>
    </style>

    <style name="OverflowButton">
        <item name="srcCompat">@drawable/ic_more_vert_24dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">?roundSelector</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="Widget.SyncShare.FloatingActionButtonStyle" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@android:color/white</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="Widget.SyncShare.ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_background_color_selector</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/button_text_color_selector</item>
    </style>

    <style name="Widget.SyncShare.ButtonStyle.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/text_button_background_color_selector</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/text_button_text_color_selector</item>
    </style>

    <style name="Widget.SyncShare.ButtonStyle.Dialog" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="rippleColor">@color/text_button_ripple_color</item>
        <item name="android:textColor">@color/text_button_text_color_selector</item>
    </style>

    <style name="Widget.SyncShare.DialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">?dialogBackground</item>
        <item name="buttonBarButtonStyle">@style/Widget.SyncShare.ButtonStyle.Dialog</item>
    </style>

    <!-- widget styling end -->

</resources>
