    <!-- prototype end -->


    <!-- generalization start -->
    <style name="Theme.SyncShare.Base" parent="Theme.Prototype.SyncShare.Base" />

    <style name="Theme.SyncShare.Base.NoActionBar" parent="@style/Theme.SyncShare.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
