<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- light theme -->
    <style name="Prototype.Theme.SyncShare.Light" parent="@style/Theme.MaterialComponents.Light">
        <item name="dialogTheme">@style/Widget.SyncShare.DialogTheme</item>
        <item name="alertDialogTheme">@style/Widget.SyncShare.DialogTheme</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="roundSelector">@drawable/round_selector</item>
        <item name="roundProgressBar">@drawable/round_progress_bar</item>
        <item name="roundProgressBarShape">@drawable/round_progress_bar_shape</item>
        <item name="floatingActionButtonStyle">@style/Widget.SyncShare.FloatingActionButtonStyle</item>
        <item name="materialButtonStyle">@style/Widget.SyncShare.ButtonStyle</item>
        <item name="buttonStyle">@style/Widget.SyncShare.ButtonStyle</item>
        <item name="textAppearanceButton">@style/TextAppearance.Button</item>
        <item name="borderlessButtonStyle">@style/Widget.SyncShare.ButtonStyle.TextButton</item>
        <item name="rippleSelector">@drawable/ripple_selector</item>
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="dialogBackground">@drawable/dialog_background</item>
    </style>

    <!-- Note: use this to change properties for different android versions -->
    <style name="Base.Theme.SyncShare.Light" parent="Prototype.Theme.SyncShare.Light"/>

    <style name="Base.Theme.SyncShare.Light.NoActionBar" parent="Base.Theme.SyncShare.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- Dark theme -->
    <style name="Prototype.Theme.SyncShare.Dark" parent="Theme.MaterialComponents">
        <item name="dialogTheme">@style/Widget.SyncShare.DialogTheme</item>
        <item name="alertDialogTheme">@style/Widget.SyncShare.DialogTheme</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="roundSelector">@drawable/round_selector</item>
        <item name="roundProgressBar">@drawable/round_progress_bar</item>
        <item name="roundProgressBarShape">@drawable/round_progress_bar_shape</item>
        <item name="floatingActionButtonStyle">@style/Widget.SyncShare.FloatingActionButtonStyle</item>
        <item name="materialButtonStyle">@style/Widget.SyncShare.ButtonStyle</item>
        <item name="buttonStyle">@style/Widget.SyncShare.ButtonStyle</item>
        <item name="textAppearanceButton">@style/TextAppearance.Button</item>
        <item name="borderlessButtonStyle">@style/Widget.SyncShare.ButtonStyle.TextButton</item>
        <item name="rippleSelector">@drawable/ripple_selector</item>
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="colorControlNormal">@android:color/white</item>
        <item name="dialogBackground">@drawable/dialog_background_dark</item>
    </style>

    <!-- Note: use this to change properties for different android versions -->
    <style name="Base.Theme.SyncShare.Dark" parent="Prototype.Theme.SyncShare.Dark"/>

    <style name="Base.Theme.SyncShare.Dark.NoActionBar" parent="Base.Theme.SyncShare.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



</resources>